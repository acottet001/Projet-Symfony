{% extends 'vueListe.html.twig' %}


{% block tablehead %}
    <tr>
      <th scope="col">Poste</th>
      <th scope="col">Domaine</th>
      <th scope="col">Entreprise</th>
      <th scope="col">Formation/s</th>
      <th scope="col">Lien</th>
    </tr>

{% endblock %}

{% block tablebody %}
    {% for stage in listeStages %}
        <tr>
            <th scope="row">{{stage.titre}}</th>
            <td>{{stage.domaine}}</td>
            <td><a href="{{path('prostage_detail_entreprise_par_id', {'id' : stage.entreprise.id}) }}">{{stage.entreprise.nom}}</a></td>
            <td>
            {% for formation in stage.formation %}
                <a href="{{path('prostage_detail_formation_par_id', {'id' : formation.id}) }}">{{formation.nomCourt}}</a><br>
            {% endfor %}
            </td>
            <td><a href="{{path('prostage_detail_stage_par_id' , {'id' : stage.id}) }}"><button type="button" class="btn btn-outline-primary">En savoir plus</button></td>
        </tr>
    {% endfor %}

{% endblock %}