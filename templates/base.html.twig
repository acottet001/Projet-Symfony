<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheet %}
    {% endblock %}
    <link href="/css/base.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>{% block title %}{% endblock %}</title>
  </head>

    <body>
        <div class="container-fluid ">
            
            <header>
                <center><a href="{{path('prostage_accueil_du_site')}}"><img src="/img/prostage2.png" alt="logo_du_site"></a></center>
            
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <div class="card">
                            <div class="card-header">
                                <h5>ProStage</h5>
                                Rechercher par : 
                                <a href="{{path('prostage_liste_des_entreprises') }}" class="btn btn-primary">Entreprises</a>
                                <a href="{{path('prostage_liste_des_formations') }}" class="btn btn-primary">Formations </a>
                                <a href="{{path('prostage_liste_des_stages') }}" class="btn btn-primary">Stages</a>
                                <br>
                                Ajouter :
                                
                                
                                {% if app.user %}
                                   <a href="{{path('app_logout') }}" class="btn btn-primary">Se d√©connecter</a>
                                {% else %}
                                    <a href="{{path('app_login') }}" class="btn btn-primary">Se connecter</a>
                                {% endif %}

                                {% if is_granted('ROLE_ADMIN') %}
                                    <a href="{{path('prostage_ajouterUneEntreprise') }}" class="btn btn-primary">Entreprise</a>
                                    <a href="{{path('prostage_ajouterUnStage') }}" class="btn btn-primary">Stage</a>
                                {% elseif is_granted('ROLE_USER') %}
                                    <a href="{{path('prostage_ajouterUneEntreprise') }}" class="btn btn-primary">Entreprise</a>
                                    User
                                {% else %}
                                    Anonymous
                                {% endif %}
                            </div>
                            <div class="card-body">
                                {% block body %}
                                {% endblock %}
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        <div>
        
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>