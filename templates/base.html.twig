<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>{% block title %}{% endblock %}</title>
  </head>

  <body>
    <body>
        <header>
            <center><a href="{{path('accueil_du_site')}}"><img src="/img/prostage.png" alt="logo_du_site"></a></center>
            <nav class="navbar navbar-light bg-light">
                <form class="form-inline">
                    <a href="{{path('accueil_du_site')}}"><button class="btn btn-outline-success" type="button">Stages</button></a>
                    <a href="{{path('liste_des_formations')}}"><button class="btn btn-outline-success" type="button">Formations</button></a>
                    <a href="{{path('liste_des_entreprises')}}"><button class="btn btn-sm btn-outline-secondary" type="button">Entreprise</button></a>
                </form>
            </nav>
        </header>
       
       {% block texte %}
       {% endblock %}

        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            {% block tablehead %}
                            {% endblock %}
                        </thead>
                        <tbody>
                            {% block tablebody %}
                            {% endblock %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  </body>

</html>