<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block stylesheet %}
    {% endblock %}
    <link href="/css/base.css" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>{% block title %}{% endblock %}</title>
  </head>

    <body>
        <div class="container-fluid ">
            
            <header>
                <center><a href="{{path('prostage_accueil_du_site')}}"><img src="/img/prostage.png" alt="logo_du_site"></a></center>
            
                <div class="row justify-content-center">
                    <div class="col-md-10">
                        <nav class="navbar navbar-expand-lg navbar-light bg-light">
                            <a class="navbar-brand" href="{{path('prostage_accueil_du_site')}}">Prostage</a>

                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>

                            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                                <div class="navbar-nav">
                                    <a class="nav-item nav-link" href="{{path('prostage_liste_des_stages')}}">Stages</a>
                                    <a class="nav-item nav-link" href="{{path('prostage_liste_des_formations')}}">Formation</a>
                                    <a class="nav-item nav-link" href="{{path('prostage_liste_des_entreprises')}}">Entreprise</a>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </header>
        <div>

        {% block card %}
            <div class="row justify-content-center">
                <div class="col-md-10">
                    {% block pageDetail %}
                        <div class="card">
                            <div class="card-header">
                                {% block titre %}{% endblock %}
                            </div>
                            <ul class="list-group list-group-flush">
                                {% block attribut %}
                                {% endblock %}
                            </ul>
                        </div>
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    
        {% block tableau %}
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <table class="table table-bordered table-striped table-light">
                        <thead>
                            {% block tablehead %}
                            {% endblock %}
                        </thead>
                        <tbody>
                            {% block tablebody %}
                            {% endblock %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endblock %}

        
        

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>

</html>